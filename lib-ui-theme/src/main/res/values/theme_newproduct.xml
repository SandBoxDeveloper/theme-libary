<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="themeproject__Theme.NewProduct">
        <item name="themeproject__themeName">@string/themeproject__newproduct_theme_name</item>
        <item name="themeproject__themePrimaryColor">@color/themeproject__pink</item>
        <item name="themeproject__themeTextColor">@color/themeproject__school_bus_yellow</item>
        <item name="themeproject__themePrimaryButton">@style/themeproject__Theme.NewProduct.Button
        </item>

    </style>

    <style name="themeproject__Theme.NewProduct.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/themeproject__text_t3</item>
        <item name="android:importantForAccessibility">yes</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/themeproject__selector_newproduct_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation" tools:targetApi="lollipop">0dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">9dp</item>
    </style>
</resources>